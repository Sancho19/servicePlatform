@page
@model LoginModel

@{
    ViewData["HideNavbar"] = true;
    ViewData["BodyClass"] = "auth-bg";
}


    <div class="auth-card">
        <h2 class="text-center mb-4">Login</h2>
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger mb-3"></div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Email" class="form-control" placeholder="name@example.com" />
                <label asp-for="Input.Email">Email</label>
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>

            <div class="form-floating mb-3">
                <input asp-for="Input.Password" class="form-control" placeholder="Password" />
                <label asp-for="Input.Password">Password</label>
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>

            <div class="form-check mb-3">
                <input class="form-check-input" asp-for="Input.RememberMe" />
                <label class="form-check-label" asp-for="Input.RememberMe">
                    @Html.DisplayNameFor(m => m.Input.RememberMe)
                </label>
            </div>

            <button type="submit" class="btn btn-primary w-100 mb-2">Log in</button>

            <div class="text-center">
                <a asp-page="./Register" asp-route-returnUrl="@Model.ReturnUrl">Don’t have an account? Register</a>
            </div>
            <div class="text-center mt-2">
                <a asp-page="./ForgotPassword">Forgot your password?</a>
            </div>
        </form>
    </div>

